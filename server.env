# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos
MONGODB_URI=mongodb://localhost:27017/musicapi

# Seguridad
JWT_SECRET=tu_clave_secreta_muy_segura_aqui_cambiarla_en_produccion

# Configuración de archivos
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# Streaming
STREAM_BUFFER_SIZE=1024
STREAM_CHUNK_SIZE=1048576

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# URLs externas (para streaming)
EXTERNAL_STREAM_BASE_URL=https://api.spotify.com/v1
YOUTUBE_API_KEY=tu_youtube_api_key
SPOTIFY_CLIENT_ID=tu_spotify_client_id
SPOTIFY_CLIENT_SECRET=tu_spotify_client_secret

# Configuración de correo (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_app

# Redis (para caché)
REDIS_URL=redis://localhost:6379